{
    //SETTINGS CHANGES
    //general
    "explorer.openEditors.visible": 5,
    "extensions.ignoreRecommendations": true,
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,

    //workbench
    "workbench.colorTheme": "Nord",
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.value": 10,
    "workbench.editor.showTabs": true,
    "workbench.enableExperiments": false,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.settings.editor": "json",
    "workbench.sideBar.location": "left",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.tips.enabled": false,
    "workbench.tree.indent": 4,
    "workbench.tree.renderIndentGuides": "onHover",
    "workbench.colorCustomizations": {
        "[Nord]": {
          "activityBarBadge.background": "#81a1c1",
          "activityBarBadge.foreground": "#eceff4"
        }
      },

    //editor
    "breadcrumbs.enabled": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.accessibilitySupport": "off",
    "editor.copyWithSyntaxHighlighting": true,
    "editor.cursorBlinking": "smooth",
    "editor.cursorSmoothCaretAnimation": true,
    "editor.minimap.enabled": false,
    "editor.parameterHints.enabled": false,
    "editor.quickSuggestionsDelay": 1,
    "editor.renderIndentGuides": true,
    "editor.renderWhitespace": "boundary",
    "editor.scrollBeyondLastLine": false,
    "editor.snippetSuggestions": "none",
    "editor.suggest.showSnippets": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "off",
    "editor.tokenColorCustomizations": {
        "[Nord]": {
            "textMateRules": [
            {
                "scope": ["comment"],
                "settings": {
                    "fontStyle": "italic",
                    "foreground":"#7b88a1"
                }
            },
            {
                "scope": ["variable.parameter"],
                "settings": {
                    "foreground": "#EBCB8B",
                }
            }
            ]
        }
    },

    //font
    "editor.fontFamily": "JetBrains Mono",
    "editor.fontLigatures": true,
    "editor.fontSize": 13,
    "editor.fontWeight": "normal",
    "editor.lineHeight": 0,

    //window
    "window.openFoldersInNewWindow": "on",
    "window.title": "${activeEditorShort}${separator}${rootName}",
    "window.zoomLevel": 0,

    //files
    "files.defaultLanguage": "{activeEditorLanguage}",
    "files.eol": "\n",
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,

    //integrated terminal
    "terminal.explorerKind": "external",
    "terminal.external.osxExec": "iTerm.app",
    "terminal.integrated.fontFamily": "Fira Mono for Powerline",
    "terminal.integrated.scrollback": 8000,
    "terminal.integrated.shell.osx": "/usr/local/bin/pwsh",

    //git
    "git.autofetch": true,
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "git.fetchOnPull": true,
    "git.pruneOnFetch": true,
    "scm.autoReveal": false,
    "scm.countBadge": "focused",
    "scm.defaultViewMode": "tree",

    //LANGUAGE SPECIFIC CHANGES
    //PowerShell
    "powershell.codeFormatting.addWhitespaceAroundPipe": true,
    "powershell.codeFormatting.autoCorrectAliases": true,
    "powershell.codeFormatting.pipelineIndentationStyle": "IncreaseIndentationAfterEveryPipeline",
    "powershell.codeFormatting.preset": "OTBS",
    "powershell.codeFormatting.useCorrectCasing": true,
    "powershell.developer.editorServicesLogLevel": "Normal",
    "powershell.enableProfileLoading": false,
    "powershell.integratedConsole.focusConsoleOnExecute": false,
    "powershell.integratedConsole.showOnStartup": false,
    "powershell.promptToUpdatePowerShell": false,
    "powershell.scriptAnalysis.enable": true,
    "powershell.scriptAnalysis.settingsPath": "./PSScriptAnalyzerSettings.psd1",
    "powershell.startAutomatically": true,
    "powershell.developer.featureFlags": [
        "PSReadLine"
    ],

    //Markdown
    "[markdown]": {
        "editor.minimap.enabled": false,
        "editor.quickSuggestions": false
    },

    //JSON
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },

    //Terraform
    "terraform.languageServer": {
        "external": true,
        "args": [
            "serve"
        ]
    },

    // EXTENSION SPECIFIC CHANGES
    //Code Spelling
    "cSpell.userWords": [
        "Datacenter",
        "Runbook",
        "ad",
        "ansible",
        "automox",
        "autopower",
        "browsable",
        "chmod",
        "datetime",
        "deprovisioning",
        "empty",
        "endfunction",
        "endregion",
        "group",
        "hashicorp",
        "hostnames",
        "inbound",
        "int",
        "ipam",
        "isu",
        "jobtemplate spec",
        "jobtemplate",
        "kerberos",
        "keyvault",
        "kubernetes",
        "ldap",
        "not",
        "notcontains",
        "notin",
        "notlike",
        "notmatch",
        "nullor",
        "okta",
        "postgresql",
        "rbac",
        "repos",
        "ryland",
        "scom",
        "smtp",
        "spec",
        "svccor",
        "validate not nullor empty",
        "validate",
        "vmware",
        "wd"
    ],
    "cSpell.enableFiletypes": [
        "!cpp",
        "!csharp",
        "!handlebars",
        "!haskell",
        "!jade",
        "!java",
        "!latex",
        "!php",
        "!pug",
        "!rust",
        "!scala",
        "!yaml",
        "!yml",
        "dockerfile",
        "ini",
        "jinja",
        "powershell",
        "properties",
        "sql",
        "terraform",
        "xml"
    ],

    //Markdownlint
    "markdownlint.config": {
        "default": true,
        "no-hard-tabs": true,
        "MD007": { "indent": 4 },
        "MD025": false,
        "MD047": false
    },

    //GitLens
    "gitlens.currentLine.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.mode.statusBar.enabled": false,
    "gitlens.codeLens.scopes": [
        "document"
    ],
    "gitlens.hovers.avatars": false,
    "gitlens.hovers.enabled": false,
    "gitlens.menus": {
        "editor": {
            "blame": false,
            "clipboard": true,
            "compare": true,
            "details": false,
            "history": false,
            "remote": false
        },
        "editorGroup": false,
        "editorTab": false,
        "explorer": {
            "clipboard": true,
            "compare": true,
            "history": true,
            "remote": true
        },
        "scmGroup": {
            "compare": true,
            "openClose": true,
            "stash": true,
            "stashInline": true
        },
        "scmItem": {
            "clipboard": true,
            "compare": true,
            "history": true,
            "remote": true,
            "stash": true
        }
    },

    //Material Icons
    "material-icon-theme.files.associations": {
        ".ansible-lint": "settings",
        ".yamllint": "settings",
        "AWX_Build-Dev.yml": "azure-pipelines",
        "AWX_Build.yml": "azure-pipelines",
        "AWX_Install.yml": "azure-pipelines",
        "AWX_Update.yml": "azure-pipelines",
        "azure-pipelines_ci.yml": "azure-pipelines",
        "azure-pipelines_prd.yml": "azure-pipelines",
        "inventory": "settings",
    },
    "material-icon-theme.folders.associations": {
        "azure-pipelines": "azure-pipelines",
        "defaults": "constant",
        "files": "log",
        "roles": "ci",
        "vars": "functions",
    },
    "material-icon-theme.showWelcomeMessage": false,
}
