{
    //SETTINGS CHANGES
    //general
    "extensions.showRecommendationsOnlyOnDemand": true,
    "explorer.openEditors.visible": 5,
    "team.showWelcomeMessage": false,
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,

    //workbench
    "workbench.settings.editor": "json",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.enableExperiments": false,
    "workbench.tips.enabled": false,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.showTabs": true,
    "workbench.tree.indent": 10,
    "workbench.tree.renderIndentGuides": "onHover",
    "workbench.sideBar.location": "left",

    //editor
    "breadcrumbs.enabled": false,
    "editor.quickSuggestionsDelay": 1,
    "editor.tabCompletion": "off",
    "editor.parameterHints.enabled": false,
    "editor.minimap.enabled": false,
    "editor.scrollBeyondLastLine": false,
    "editor.renderWhitespace": "boundary",
    "editor.renderIndentGuides": true,
    "editor.accessibilitySupport": "off",
    "editor.copyWithSyntaxHighlighting": true,
    "editor.suggestSelection": "first",
    "diffEditor.ignoreTrimWhitespace": false,
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.value": 10,
    "editor.suggest.showSnippets": false,

    //fonts
    "editor.fontFamily": "Cascadia Code", //"Fira Code", //"Source Code Pro",
    "editor.fontLigatures": true,
    "editor.fontSize": 13,
    "editor.fontWeight": "normal",

    //window
    "window.zoomLevel": 0,
    "window.title": "${activeEditorShort}${separator}${rootName}",
    "window.openFoldersInNewWindow": "on",

    //files
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.defaultLanguage": "{activeEditorLanguage}",
    "material-icon-theme.showWelcomeMessage": false,
    "workbench.iconTheme": "material-icon-theme",

    //terminal
    "terminal.integrated.shell.osx": "/bin/zsh",
    "terminal.integrated.scrollback": 8000,
    "terminal.integrated.fontFamily": "Fira Code",

    //git
    "git.enableSmartCommit": true,
    "git.confirmSync": false,

    //LANGUAGE SPECIFIC CHANGES
    //PowerShell
    "powershell.startAutomatically": true,
    "powershell.promptToUpdatePowerShell": false,
    "powershell.scriptAnalysis.enable": true,
    "powershell.integratedConsole.showOnStartup": true,
    "powershell.integratedConsole.focusConsoleOnExecute": false,
    "powershell.codeFormatting.preset": "OTBS",
    "powershell.codeFormatting.useCorrectCasing": true,
    "powershell.codeFormatting.autoCorrectAliases": true,
    "powershell.codeFormatting.addWhitespaceAroundPipe": true,
    "powershell.codeFormatting.pipelineIndentationStyle": "IncreaseIndentationAfterEveryPipeline",
    "powershell.developer.editorServicesLogLevel": "Normal",
    "powershell.scriptAnalysis.settingsPath": "/users/<username>/.PSScriptAnalyzerSettings.psd1",
    "powershell.developer.featureFlags": [
        "PSReadLine"
    ],

    //Markdown
    "[markdown]": {
        "editor.quickSuggestions": false,
        "editor.minimap.enabled": false
    },
    "markdownlint.config": {
        "default": true,
        "MD025": false,
        "MD007": { "indent": 4 },
        "no-hard-tabs": true,
        "MD047": false
    },

    //JSON
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },

    //Terraform
    "terraform.languageServer": {
        "external": true,
        "args": [
            "serve"
        ]
    },
    "terraform.indexing": {
        "enabled": false,
    },

    //Code Spelling
    "cSpell.userWords": [
        "Datacenter",
        "Runbook",
        "ansible",
        "automox",
        "autopower",
        "browsable",
        "chmod",
        "datetime",
        "endfunction",
        "endregion",
        "hashicorp",
        "ho",
        "hostnames",
        "jobtemplate",
        "jobtemplate spec",
        "kerberos",
        "keyvault",
        "kubernetes",
        "ldap",
        "notcontains",
        "notlike",
        "postgresql",
        "repos",
        "spec",
        "svccor",
        "vmware"
    ],
    "cSpell.enableFiletypes": [
        "!cpp",
        "!csharp",
        "!handlebars",
        "!haskell",
        "!jade",
        "!java",
        "!latex",
        "!php",
        "!pug",
        "!rust",
        "!scala",
        "!yaml",
        "!yml",
        "dockerfile",
        "ini",
        "jinja",
        "powershell",
        "properties",
        "sql",
        "terraform",
        "xml"
    ],
    "terminal.explorerKind": "external",
    "terminal.external.osxExec": "iTerm.app",
    "gitlens.mode.statusBar.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.currentLine.enabled": false,
    "gitlens.codeLens.scopes": [
        "document"
    ],
    "gitlens.hovers.avatars": false,
    "gitlens.hovers.enabled": false,
    "gitlens.menus": {
        "editor": {
            "blame": false,
            "clipboard": true,
            "compare": true,
            "details": false,
            "history": false,
            "remote": false
        },
        "editorGroup": false,
        "editorTab": false,
        "explorer": {
            "clipboard": true,
            "compare": true,
            "history": true,
            "remote": true
        },
        "scmGroup": {
            "compare": true,
            "openClose": true,
            "stash": true,
            "stashInline": true
        },
        "scmItem": {
            "clipboard": true,
            "compare": true,
            "history": true,
            "remote": true,
            "stash": true
        }
    },
    "workbench.colorTheme": "GitHub Dark",
}
